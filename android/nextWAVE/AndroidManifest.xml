<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nextwave"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nextwave.MicrowaveClientActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nextwave.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.nextwave.StartFromDbActivity"
            android:label="@string/title_activity_start_from_db" >
        </activity>
        <activity
            android:name="com.nextwave.CountdownActivity"
            android:label="@string/title_activity_countdown" >
        </activity>
        <activity
            android:name="com.nextwave.FoodDoneActivity"
            android:label="@string/title_activity_food_done" >
        </activity>
        <activity
            android:name="com.nextwave.SearchDbActivity"
            android:label="@string/title_activity_search_db" >
        </activity>
        <activity
            android:name="com.nextwave.InputToDbActivity"
            android:label="@string/title_activity_input_to_db" >
        </activity>
    </application>

</manifest>
